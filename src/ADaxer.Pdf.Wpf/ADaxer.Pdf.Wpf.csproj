<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<UseWPF>true</UseWPF>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>ADaxer.Pdf.Wpf</PackageId>
		<Version>1.0.0</Version>
		<Authors>Andreas Daxer</Authors>
		<Company>Andreas Daxer - Entwicklung – Schulung – Beratung mit Microsoft.NET</Company>
		<Description>A PdfViewer for WPF.</Description>
		<PackageReleaseNotes>Initial release.</PackageReleaseNotes>
		<Copyright>Copyright 2024 Andreas Daxer</Copyright>
		<PackageTags>WPF PDF</PackageTags>
		<RepositoryUrl>https://github.com/adaxer/Pdf.Wpf</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="PDFiumCore" Version="128.0.6569" />
		<PackageReference Include="SixLabors.ImageSharp" Version="3.1.5" />
	</ItemGroup>

</Project>
